<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
  
	<display-name>Authentication Takeover in Java EE 8</display-name>
	
  
	<!-- link page to role -->
	<security-constraint>
		<display-name>Secret Page</display-name>
		<web-resource-collection>
			<web-resource-name>secret</web-resource-name>
			<url-pattern>/secret</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description/>
			<role-name>Admin</role-name>
			<role-name>User</role-name>
		</auth-constraint>
	</security-constraint>
	
	
	<!-- authentication method -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login</form-login-page>
			<form-error-page>/error</form-error-page>
		</form-login-config>
	</login-config>
	
	
	<!-- roles -->
	<security-role>
		<role-name>Admin</role-name>
	</security-role>
	<security-role>
		<role-name>User</role-name>
	</security-role>
  
  
  	<!-- root page -->
	<welcome-file-list>
		<welcome-file>/WEB-INF/home.jsp</welcome-file>
	</welcome-file-list>
	
  
	<!-- Remove .jsp extension -->
	<!-- home -->
	<servlet>
		<servlet-name>home</servlet-name>
		<jsp-file>/WEB-INF/home.jsp</jsp-file>
		<!-- Precompile .jsp -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>home</servlet-name>
	    <url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	
	<!-- Need for Authentication -->
	<servlet>
		<servlet-name>secret</servlet-name>
		<jsp-file>/WEB-INF/secret.jsp</jsp-file>
		<!-- Precompile .jsp -->
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>secret</servlet-name>
	    <url-pattern>/secret</url-pattern>
	</servlet-mapping>
	
	<!-- login page -->
	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/WEB-INF/login.jsp</jsp-file>
		<!-- Precompile .jsp -->
		<load-on-startup>3</load-on-startup>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>login</servlet-name>
	    <url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- error page -->
	<servlet>
		<servlet-name>error</servlet-name>
		<jsp-file>/WEB-INF/error.jsp</jsp-file>
		<!-- Precompile .jsp -->
		<load-on-startup>4</load-on-startup>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>error</servlet-name>
	    <url-pattern>/error</url-pattern>
	</servlet-mapping>
	
</web-app>
